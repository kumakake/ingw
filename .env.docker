# Docker Compose 開発環境用の設定
# 実際に使用する場合は .env にコピーして編集してください

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Meta App Credentials
# ⚠️ 必ず実際の値に置き換えてください
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
REDIRECT_URI=http://localhost:3000/auth/callback

# PostgreSQL Database (Docker Compose用)
# DB_HOSTはdocker-compose.ymlで自動的に'db'に設定されます
DB_HOST=db
DB_PORT=5432
DB_NAME=instagram_oauth
DB_USER=postgres
DB_PASSWORD=postgres

# API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_dev_password

# JWT Configuration
JWT_SECRET=docker_dev_jwt_secret_change_in_production

# PGP Encryption Key (for email encryption)
PGP_ENCRYPTION_KEY=docker_dev_pgp_key_change_in_production

# SendGrid Configuration
# ⚠️ 必ず実際の値に置き換えてください
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Instagram OAuth Service

# Stripe Configuration
# ⚠️ テスト用のキーを設定してください
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_ID_YEARLY=price_your_yearly_price_id